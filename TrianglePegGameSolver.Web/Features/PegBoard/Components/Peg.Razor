@using TrianglePegGameSolver.Web.Features.PegBoard.Models

<ellipse stroke="#8f8f8f" transform="scale(0.15)" ry="8" rx="8" id="svg_2" cy="@Y" cx="@X" fill="@GetColor()" />

@code{

    [Parameter]
    public int X { get; set; } = 0;

    [Parameter]
    public int Y { get; set; } = 0;

    [Parameter]
    public PegStyle PegStyle { get; set; } = PegStyle.Filled;

    private string GetColor()
    {
        return PegStyle switch
        {
            PegStyle.Filled => pegColor,
            PegStyle.Empty => pegEmptyColor,
            PegStyle.ToBeRemoved => pegRemovedColor,
            PegStyle.Selected => pegSelectedColor,
            _ => throw new ArgumentOutOfRangeException()
        };
    }

    string pegColor = "#FFE7A2";
    string pegEmptyColor = "#111111";
    string pegRemovedColor = "#d01f1f";
    string pegSelectedColor = "#5255dc";

}