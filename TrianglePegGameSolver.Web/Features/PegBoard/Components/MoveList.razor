<div>
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-2">
        Moves
    </h3>
    <ul class="border border-gray-200 rounded-md divide-y divide-gray-200">
        <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm @BgClass(1)">
            <div class="w-0 flex-1 flex items-center">
                <span>1.</span>
                <span class="ml-2 flex-1 w-0 truncate">
                    Remove 7
                </span>
            </div>
        </li>
        @foreach (int i in Enumerable.Range(2, 9))
        {
            <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm @BgClass(i)">
                <div class="w-0 flex-1 flex items-center">
                    <span>@(i).</span>
                    <span class="ml-2 flex-1 w-0 truncate">
                        Move 2 to 7
                    </span>
                </div>
            </li>
        }
    </ul>
</div>

@code
{
    private string BgClass(int i)
    {
        return i % 2 == 0 ? "" : "bg-gray-100";
    }
}