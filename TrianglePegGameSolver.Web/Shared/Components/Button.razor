@if (ChildContent != null)
{
    <button class="px-5 py-1 rounded-md bg-blue-500 text-white flex @Class" @onclick="Click">
        @ChildContent
        <span class="mx-2">@Text</span>
    </button>
}
else
{
    <button class="px-5 rounded-md bg-blue-500 text-white @Class" @onclick="Click">@Text</button>
}

@code {
    [Parameter]
    public string Class { get; set; }   
    
    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public EventCallback<EventArgs> OnClick { get; set; }

    [Parameter] public RenderFragment ChildContent { get; set; }

    private async Task Click()
    {
        await OnClick.InvokeAsync();
    }
}